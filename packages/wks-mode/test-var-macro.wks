# Test file for :var macro highlighting
# The variable names (first string) should show variable-name face (yellow/orange)
# The values (second string) should show string face (green)

# ============================================================================
# Basic :var declarations
# ============================================================================

:var "greeting" "Hello, World!"
:var "username" "John Doe"
:var "path" "/home/user/documents"
:var "count" "42"
:var "enabled" "true"

# ============================================================================
# :var with special characters in strings
# ============================================================================

:var "quote_test" "String with \"escaped quotes\""
:var "backslash_test" "Path with \\ backslash"
:var "newline_test" "Text with\nnewline"
:var "tab_test" "Text with\ttab"

# ============================================================================
# :var with UTF-8 characters
# ============================================================================

:var "lambda" "λ function"
:var "copyright" "© 2025"
:var "arrow" "→ direction"
:var "euro" "€100"

# ============================================================================
# Using :var variables in commands
# ============================================================================

a "Say greeting" %{{echo %(greeting)}}
b "Show username" %{{echo %(username)}}
c "Show path" %{{echo %(path)}}
d "Show count" %{{echo Count: %(count)}}

# ============================================================================
# :var in context with other macros
# ============================================================================

:debug
:var "debug_mode" "enabled"

:include "other_file.wks"
:var "include_test" "value"

:fg-key "#ffffff"
:var "foreground" "white"

:bg "#000000"
:var "background" "black"

# ============================================================================
# Multiple :var declarations in sequence
# ============================================================================

:var "first" "1st"
:var "second" "2nd"
:var "third" "3rd"
:var "fourth" "4th"
:var "fifth" "5th"

# ============================================================================
# :var with long variable names and values
# ============================================================================

:var "very_long_variable_name_for_testing" "This is a very long value string for testing purposes"
:var "another_long_name" "Another long value that spans quite a bit of space"

# ============================================================================
# Expected Highlighting Summary
# ============================================================================

